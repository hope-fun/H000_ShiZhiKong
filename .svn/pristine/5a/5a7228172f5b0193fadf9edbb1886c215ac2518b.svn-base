.content {
	width: 100%;
	margin: 0 auto;
	padding-top: 75px;
	padding-bottom: 84px;
	font-size: 20pt;
}

.card-detail-header {
	background: url(../../images/label2.png)  no-repeat;
	background-size:auto auto;
}

.package-content-detail {
	height:380px;
	padding:5px 0;
}

.package-content-top {
	background: url(../../images/border/A010-01.png) center center no-repeat;
	background-size:100% 100%;
	height:20px;
}

.package-content-middle{
	background:url(../../images/border/A010-02.png) center center; 	
	background-size:100% 100%;
}

.show-publicize-img {
	margin:0 auto;
	text-align: center;
	padding-top:0px;
}

.show-publicize-img02 {
	margin:0 auto;
	text-align: center;
	padding-top:15px;
}


.show-publicize-img img{
	/* height:100%;
	width:100%; */
}

.package-content-text {
	width:84%;
	margin:0 auto;
	height:70px;
	padding:20px 0;
}

.txt-div-2-left,.txt-div-2-right {
	width:50%;
	float:left;
}

.txt-div-2-left {
	text-align: left;
}

.txt-div-2-right {
	text-align:center;
}

.package-content-bottom{
	width:100%;
	text-align: center;
	
}
.package-content-bottom>div {
	float:left;
	width:33%;
}
.package-content-bottom>div>img{
	width: 72%;
}
.package-content-bottom>div:last-child {
	float:none;
	clear:both;
}


.package-frame-bottom {
	background:url(../../images/border/A010-03.png) center center no-repeat; 	
	background-size:100% 100%;	
	height:70px;
}

.clear-fix-p {
	float:none;
	clear:both;
}

.location-middle-card {
	margin:0 auto;
	text-align: center;
}

.location-middle-card>div:first-child {
/* 	background:url(../../images/mcard-middlecard.png) center center no-repeat; 	
	background-size:100% auto;	 */
	width:33%;
	margin:0 auto;
}

.location-middle-card>div:last-child {
	text-align: center;
	width: 58%;
	margin: 0 auto;
}
.location-middle-card>div:last-child>a>img {
	padding-top:20px;
	width:100%;
}

.row-distance {
	height:24px;
}

.image-show {
	width:100%;
}


/*added by ma-li*/

.item-level{
	font-size: 24pt;
}

.consumable-pic{
	float:left;
	width:28%;
}

.consumable-pic-style{
	width: 85%;
	margin: 0 auto;
}

.consumable-info{
	float:right;
	width:72%;
}

.left-style{
	width:50%;
	float:left;
}

.right-style{
	width:50%;
	float:right;
}











