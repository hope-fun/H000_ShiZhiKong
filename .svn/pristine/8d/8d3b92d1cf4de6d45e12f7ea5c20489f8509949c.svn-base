.content {
	width: 100%;
	margin: 0 auto;
	padding-top: 75px;
	padding-bottom: 84px;
	font-size: 20pt;
}

.gbutton-01 > div > img{
	width: 80%;
}

.tab-panel02 {
	width: 100%;
	padding: 12px 0 0;
}
.tab-panel02>div {
	width: 187px;
	height:53px;
	float: left;
	text-align: center;	
}
.tab-panel02>div:last-child{
	float: none;
	clear: both;
	width: 0;
	height: 0;
}

