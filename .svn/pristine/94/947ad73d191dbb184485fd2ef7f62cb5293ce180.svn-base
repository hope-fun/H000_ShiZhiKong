log4j.rootLogger=INFO, stdout, logfile  
  
log4j.logger.org.springframework.oxm=DEBUG
log4j.logger.org.hibernate.test=DEBUG  
log4j.logger.org.hibernate.tool.hbm2ddl=DEBUG  
log4j.logger.org.hibernate.hql.ast.QueryTranslatorImpl=DEBUG  
log4j.logger.org.hibernate.hql.ast.HqlSqlWalker=DEBUG  
log4j.logger.org.hibernate.hql.ast.SqlGenerator=DEBUG  
log4j.logger.org.hibernate.hql.ast.AST=DEBUG  
log4j.logger.org.hibernate.type.descriptor.sql.BasicBinder=DEBUG  
log4j.logger.org.hibernate.type.BasicTypeRegistry=DEBUG  
log4j.logger.com.opensymphony=DEBUG  
log4j.logger.org.apache.struts2=DEBUG  
log4j.logger.net.sf.ehcache=DEBUG
  
# Spring Stuff  
log4j.logger.org.springframework=INFO  
log4j.logger.com.sun.jersey=INFO
log4j.logger.javax.ws.rs=INFO
log4j.logger.javax.persistence=INFO
log4j.logger.com.notnoop.apns=INFO
